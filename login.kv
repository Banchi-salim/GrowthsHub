#:set s dp(160)
Login:
    name:"login"
    MDBoxLayout:
        md_bg_color:37/255, 170/255, 225/255, 1
        size:root.size
        padding:"20dp", "20dp", "20dp", "20dp"
        #md_bg_color: app.theme_cls.primary_color
        orientation:"vertical"
        canvas:
            Color:
                rgba:(1, 1, 1, 1)
            Ellipse:
                pos:self.center_x - (s/2), self.center_y - (s/2)
                size:s, s
                source:"images/growthshubAsset3.png"


        MDRoundFlatIconButton:
            icon: "instagram"
            text: "Login with Instagram"
            theme_text_color: "Custom"
            text_color: 0, 0, 0, 1
            line_color: 0, 0, 0, 1
            theme_icon_color: "Custom"
            icon_color: 1, 0, 0, 1
            pos_hint:{"center_x":.5,"center_y":.55}
            size_hint:(None, None)
            size: "280dp", "50dp"
            on_release:root.button_click()


